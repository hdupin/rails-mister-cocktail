

<div class='container text-center'>
  <h1>Cocktail Edit</h1>
  <div class='text-center flex-box'> 
    <%= simple_form_for @cocktail do |cocktail| %>
      <%= cocktail.input :name%>
      <%= cocktail.input :picture %>
      <%= cocktail.input :picture_cache, as: :hidden %>
      <%= cocktail.button :submit %>
    <% end %>
  </div>
</div>